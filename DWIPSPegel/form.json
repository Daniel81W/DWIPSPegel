{
    "elements": [
        {
            "type": "Select",
            "name": "water",
            "caption": "Gewässer",
            "options": [

            ],
            "onChange": [
                "DWIPSPEGEL_WriteAttributeWaterAtt($id, $water);",
                "DWIPSPEGEL_ReloadConfigurationForm($id);"
            ]
        },
        {
            "type": "Select",
            "name": "level",
            "caption": "Pegel",
            "options": [

            ],
            "onChange": [
                "DWIPSPEGEL_changeLevel($id, $level);",
                "DWIPSPEGEL_ReloadConfigurationForm($id);"
            ]
        },
        {
            "type": "CheckBox",
            "name": "logging",
            "caption": "Werte aufzeichnen?",
            "visible": false,
            "onChange": [
                "DWIPSPEGEL_changeLogging($id, $logging);",
                "DWIPSPEGEL_ReloadConfigurationForm($id);"
            ]
        },
        {
            "type": "CheckBox",
            "name": "AutomaticInterval",
            "caption": "Auto",
            "visible": false,
            "onChange": [

                "DWIPSPEGEL_ReloadConfigurationForm($id);"
            ]
        },
        {
            "type": "NumberSpinner",
            "name": "IntervalSpinner",
            "caption": "Interval",
            "visible": false,
            "enabled": false,
            "minimum": 0
        },{
            "type":"RowLayout",
            "items": [
                {
                    "type": "ValidationTextBox",
                    "name": "mthw",
                    "caption": "Mittleres Tidehochwasser in m über Pegelnull",
                    "validation": "-?[0-9]*[.]?[0-9]+"
                },{
                    "type": "Button",
                    "caption": "click",
                    "onClick": [
                        "DWIPSPEGEL_changeMthw($id, $mthw);"
                    ]
                }
                ]
        }
    ],
    "actions": [
        {
            "type": "Button",
            "name": "logBut",
            "caption": "Historische Daten ins Archive laden",
            "confirm": "",
            "visible": false,
            "onClick": [
                "DWIPSPEGEL_loadHistoricDataToArchive($id);"
            ]
        },{
            "type": "Button",
            "name": "updateButton",
            "caption": "Manuelles Update",
            "onClick": [
                "DWIPSPEGEL_UpdateCurrent($id);"
            ]
        },
        {
            "type": "ValidationTextBox",
            "name": "uuid",
            "caption": "Pegel-UUID",
            "enabled": false
        },
        {
            "type": "Label",
            "name": "pegellink",
            "caption": "Pegellink"
        }
    ],
    "status": []
}